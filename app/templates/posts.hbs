<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <table class='table'>
                <thead>
                    <tr>
                        <th>Recent Posts</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each model}}
                    <tr>
                        <td>
                            {{#link-to 'post' this}}{{title}}
                            <small class='muted'>by {{author.name}}</small>{{/link-to}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="span9">
            {{outlet}}
        </div>
    </div>
</div>
